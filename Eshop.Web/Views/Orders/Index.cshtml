@model Eshop.Domain.Identity.EshopAppUser

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col m-3">
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th scope="col">User</th>
                    <th scope="col">Price</th>
                    <th scope="col">Tickets</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.Orders)
                    {
                                <tr>
                                    <td>@item.Owner.UserName</td>
                                    <td>@item.price</td>
                                    <td>
                                        @foreach (var ticketInOrder in item.TicketsInOrder)
                                        {
                                            <h5>@ticketInOrder.Ticket.ProductName</h5>
                                        }
                                    </td>
                                    <td>
                                    <td><a asp-controller="Orders" asp-action="GenerateInvoice" asp-route-id="@item.ID" class="btn btn-outline-info">Generate Invoice</a></td>
                                </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>
